# Cache static assets for 1 year (immutable content)
/static/css/*
  Cache-Control: public, max-age=31536000, immutable

/static/js/*
  Cache-Control: public, max-age=31536000, immutable

/static/images/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts
/static/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - cache briefly, revalidate
/*
  Cache-Control: public, max-age=3600, must-revalidate
